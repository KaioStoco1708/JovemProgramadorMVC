@model List<AlunoModel>

@if (TempData["MensagemEndereco"] != null)
{
    <div class="alert alert-success d-flex align-items-center" role="alert">
        @TempData["MensagemEndereco"]
    </div>
}

@if (TempData["MensagemExcluir"] != null)
{
    <div class="alert alert-success d-flex align-items-center" role="alert">
        @TempData["MensagemExcluir"]
    </div>
}

<div class="text-left">

    <div>
        <h1>Dados dos Alunos</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">Contato</th>
                <th scope="col">Email</th>
                <th scope="col">Cep</th>
                <th scope="col">Endereco</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
                    <tr>
                        <td> @aluno.Nome</td>
                        <td> @aluno.Idade</td>
                        <td> @aluno.Contato</td>
                        <td> @aluno.Email</td>
                        <td> @aluno.Cep</td>
                        <td>
                            <div>
                                <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="BuscarEndereco" asp-route-id="@aluno.Id">Endereco</a>
                                <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                                <a class="btn btn-danger" type="button" asp-controller="Aluno" asp-action="Excluir" asp-route-id="@aluno.Id">Excluir</a>
                            </div>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="text-center">
        <a class="btn btn-primary" type="button" asp-controller="Aluno" asp-action="Adicionar">Adicionar</a>
        <a class="btn btn-primary" type="button" asp-controller="Filtros" asp-action="Index">Filtros</a>
        <a class="btn btn-primary" type="button" asp-controller="Home" asp-action="Index">Voltar</a>
    </div>

</div>