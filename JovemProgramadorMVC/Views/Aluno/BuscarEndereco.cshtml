@model EnderecoModel

<form>
    <div class="mb-3">
        <label for="nomeAluno" class="form-label">Logradouro</label>
        <input type="text" class="form-control col-md-5" asp-for="logradouro">
    </div>

    <div class="mb-3">
        <label for="idadeAluno" class="form-label">Complemento</label>
        <input type="text" class="form-control col-md-5" asp-for="complemento">
    </div>

    <div class="mb-3">
        <label for="contatoAluno" class="form-label">Bairro</label>
        <input type="text" class="form-control col-md-5" asp-for="bairro">
    </div>

    <div class="mb-3">
        <label for="emailAluno" class="form-label">Localidade</label>
        <input type="email" class="form-control col-md-5" asp-for="localidade">
    </div>

    <div class="mb-3">
        <label for="cepAluno" class="form-label">UF</label>
        <input type="text" class="form-control col-md-2" asp-for="uf">
    </div>

    <div class="mb-3">
        <label for="cepAluno" class="form-label">DDD</label>
        <input type="text" class="form-control col-md-2" asp-for="ddd">
    </div>
</form>

<div class="text-center">
    <button type="submit" class="btn btn-primary col-1" role="button">Adicionar</button>
    <a class="btn btn-primary col-1" type="button" asp-controller="Aluno" asp-action="Index">Voltar</a>
</div>
